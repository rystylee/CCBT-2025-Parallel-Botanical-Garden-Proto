{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
  },
  "black-formatter.args": [
    "--line-length=120"
  ],
  "isort.args": ["--profile", "black"],
  "flake8.args": [
    "--max-line-length=120",
    "--ignore=E203,W503,W504"
  ]
}
